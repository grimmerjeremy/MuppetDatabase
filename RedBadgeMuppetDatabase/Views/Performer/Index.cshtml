@model IEnumerable<Muppets.Models.PerformerList>

@{
    ViewBag.Title = "Index";
}

<div class="heads">
    <h2>Performers</h2>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PerformerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PerformerName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PerformerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PerformerName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PerformerId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PerformerId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PerformerId })
            </td>
        </tr>
    }

</table>

<p>
    <a class="btn btn-default" @Html.ActionLink("Create a Performer", "Create")></a>
</p>
